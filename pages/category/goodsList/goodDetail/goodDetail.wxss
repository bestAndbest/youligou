/* pages/category/goodsList/goodDetail/goodDetail.wxss */
.swiper{
  height: 60vw;
  text-align: center;
}
.img2{
  width: 70%;
}
.goods-price{
  margin: 30rpx 0 20rpx 30rpx;
  color: red;
}
.thegoods{
   font-size: 28rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding-bottom: 14rpx;
  border-bottom: 10rpx solid #f4f4f4;
}
.goods-name{
  width: 78%;
  color: #666;
  box-sizing: border-box;
  border-right: 4rpx solid #666;
}
.goods-start{
  width: 10%;
  box-sizing: border-box;
  text-align: center;
  color: #666;
}
.txtimg{
  font-size: 32rpx;
  color: red;
  font-weight: bold;
  padding: 28rpx;

}
.richtext{
  margin-bottom: 86rpx;
}
.bottom{
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #fff;
  height: 86rpx;
  text-align: center;
  border-top: 2rpx solid #f4f4f4;
}
.tool-item{
  position: relative;
  flex: 1.5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 28rpx;
  color: #333;
  align-items: center;
}

.tool-item button{
  position: absolute;
  width: 100%;
  height: 100%;
 opacity: 0;
}
.addcart{
  flex: 2;
   height: 100%;
   line-height:86rpx;
  background-color: #FFA400;
}
.nowbuy{
  flex: 2;
  height: 100%;
  line-height: 86rpx;
  background-color: #F8554F;
}